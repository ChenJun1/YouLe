<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FAFAFA"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/beijing"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_15"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginRight="@dimen/margin_8"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@mipmap/icon_yunduo">

                <TextView
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@drawable/tvbg_home_top"
                    android:padding="@dimen/margin_4"
                    android:id="@+id/btn_Process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="试管婴儿流程"
                    android:textColor="#f993a6"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/margin_8"
                android:gravity="center"
                android:background="@mipmap/icon_yunduo"
                android:layout_width="120dp"
                android:layout_height="70dp">
            <TextView
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_8"
                android:padding="@dimen/margin_4"
                android:background="@drawable/tvbg_home_top"
                android:id="@+id/btn_success_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="试管婴儿成功率"
                android:textColor="#f993a6"
                android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@drawable/bg_linyout_home"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_8"
        android:paddingTop="@dimen/margin_8">

        <LinearLayout
            android:id="@+id/ll_today_to_be_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_jinridaiban" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日待办"
                android:textColor="@color/color_585858" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_medical_records"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_zhenliaojilu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诊疗记录"
                android:textColor="@color/color_585858" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_diet_assistant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_yinshitiaoyang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饮食助手"
                android:textColor="@color/color_585858" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_good_prgegnancy_guidance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_haoyunzhidao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好运指导"
                android:textColor="@color/color_585858" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_8"
        android:paddingTop="@dimen/margin_8">

        <LinearLayout
            android:id="@+id/ll_pregnancy_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_beiyunjancha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备孕检查"
                android:textColor="@color/color_585858" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_test_tube_guidance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_shiguanzhidao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="试管指导"
                android:textColor="@color/color_585858" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_legitimate_surrogacy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_hefadaiyun" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合法代孕"
                android:textColor="@color/color_585858" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:background="@color/color_f993a6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:text="社区新帖"
            android:textColor="@color/color_f993a6" />

        <View
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:background="@color/color_f993a6" />
    </LinearLayout>

</LinearLayout>