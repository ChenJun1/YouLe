<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/margin_8"
    android:background="@color/colorWhite"
    android:layout_height="90dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView

            android:layout_weight="1.5"
            android:id="@+id/title_tv"
            android:textColor="@color/color_2c2c2c"
            android:lines="1"
            android:textSize="@dimen/text_small_title"
            android:text="受精神导师"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:paddingTop="@dimen/margin_8"
            android:layout_weight="2.5"
            android:textColor="@color/color_838383"
            android:lines="2"
            android:text="当要区别接口和实现类的时候,可以在类的后面加上“Impl”。 interface Container class ContainerImpl 2.Exdddddddddception类最好能用“Exception”做为类"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <com.sunfusheng.glideimageview.GlideImageView
            android:layout_gravity="center"
            android:id="@+id/pic_iv"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>