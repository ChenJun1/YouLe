<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".clinic.activity.ActivityDoctorDetail">

    <include layout="@layout/layout_head" />

    <ScrollView
        android:background="@color/color_FAFAFA"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <com.sunfusheng.glideimageview.GlideImageView
                    android:id="@+id/giv_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_25"
                    android:src="@mipmap/im_avatar"
                    app:siv_pressed_alpha="0.3" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_2c2c2c" />

                <TextView
                    android:id="@+id/rom_duties_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#838383" />

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_3"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#838383" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_16"
                android:text="个人简介"
                android:textColor="#1e1e1e" />

            <TextView
                android:id="@+id/info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                android:background="@color/colorWhite"
                android:padding="@dimen/margin_16"
                android:text=""
                android:textColor="#575757" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_16"
                android:text="擅长领域"
                android:textColor="#1e1e1e" />

            <TextView
                android:id="@+id/expert_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                android:background="@color/colorWhite"
                android:padding="@dimen/margin_16"
                android:text=""
                android:textColor="#575757" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>