<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_1"
    android:paddingLeft="@dimen/margin_16"
    android:paddingRight="@dimen/margin_16">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/photo_giv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/u_nname_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="center"
            android:text="奥尔良"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/text_small_title" />
    </LinearLayout>

    <TextView
        android:id="@+id/m_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:text="体外受精是一种特殊的技术？"
        android:textColor="#595959" />

    <TextView
        android:id="@+id/m_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="@dimen/margin_5"
        android:text=""
        android:textColor="#595959"
        android:textSize="13sp" />

</LinearLayout>