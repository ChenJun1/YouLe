<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.activty.ActivityMedicalRecords"
    android:background="@color/color_FAFAFA"
    android:layout_height="match_parent">

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_100">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_qita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_add"
            android:textSize="@dimen/text_small_title"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="center"
            android:textColor="@color/color_575757"
            android:text="自定义添加"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:gravity="center_vertical"
        android:textColor="@color/color_585858"
        android:textSize="@dimen/text_small_title"
        android:text="病程记录"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcy_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>