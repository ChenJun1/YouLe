<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clipChildren="false"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".home.activty.ActivityHome">


    <!--<include layout="@layout/layout_head"/>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/home_icon_shouye_2"
            app:tabIconSelected="@mipmap/home_icon_shouye"
            app:tabText="@string/home_home"
            app:tabTextSize="13sp"
            app:textColorNormal="@color/color_545454"
            app:textColorSelected="@color/color_f993a6" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/home_icon_zhensuo"
            app:tabIconSelected="@mipmap/home_icon_zhensuo_2"
            app:tabText="@string/home_inquiry"
            app:tabTextSize="13sp"
            app:textColorNormal="@color/color_545454"
            app:textColorSelected="@color/color_f993a6" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@mipmap/home_icon_wenzhen"
            android:padding="5dp"
            app:tabIconNormal="@null"
            app:tabIconSelected="@null"
            app:tabText="@string/home_encyclopedia"
            app:tabTextSize="13sp"
            app:textColorNormal="@color/color_545454"
            app:textColorSelected="@color/color_f993a6"/>


        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/home_icon_shequ"
            app:tabIconSelected="@mipmap/home_icon_shequ_2"
            app:tabText="@string/home_community"
            app:tabTextSize="13sp"
            app:textColorNormal="@color/color_545454"
            app:textColorSelected="@color/color_f993a6" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/home_icon_wode"
            app:tabIconSelected="@mipmap/home_icon_wode_2"
            app:tabText="@string/home_mine"
            app:tabTextSize="13sp"
            app:textColorNormal="@color/color_545454"
            app:textColorSelected="@color/color_f993a6"/>

    </com.yinglan.alphatabs.AlphaTabsIndicator>

</LinearLayout>