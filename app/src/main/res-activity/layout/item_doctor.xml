<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/colorWhite"
    android:orientation="horizontal"

    android:paddingLeft="@dimen/margin_16"
    android:paddingRight="@dimen/margin_16"
    android:paddingTop="@dimen/margin_8">

    <com.sunfusheng.glideimageview.GlideImageView
        android:id="@+id/tv_avatar"
        android:layout_width="74dp"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_8"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_d_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="刘明医生"
                android:textColor="@color/color_2c2c2c"
                android:textSize="@dimen/text_small_title" />

            <TextView
                android:id="@+id/tv_d_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:maxLines="1"
                android:text="妇科"
                android:textColor="@color/color_838383" />

            <TextView
                android:id="@+id/tv_d_duties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:maxLines="1"
                android:text="主科医生"
                android:textColor="@color/color_838383" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_d_info"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:maxLines="2"
            android:paddingBottom="@dimen/margin_8"
            android:text="南京大学医学院的前身为中央大学医学院，创建于1935年，1949年解放后改名为南京大学医学院"
            android:textColor="@color/color_838383" />

    </LinearLayout>


</LinearLayout>