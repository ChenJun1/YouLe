<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mine.activity.ActivityPersonalInformation"
    android:background="@color/color_F1F1F1"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_head"/>
    
    <LinearLayout
        android:id="@+id/ll_update_avatar"
        android:background="@color/colorWhite"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_head_height">

        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/giv_avatar"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/margin_8"
            android:gravity="center_vertical"
            android:text="修改头像"
            android:layout_weight="1"
            android:textColor="@color/color_969696"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nike_name"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="昵称"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:gravity="center_vertical"
            android:textColor="@color/color_505050"
            android:text="怒漯河"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gender"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="性别"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_gender"
            android:gravity="center_vertical"
            android:textColor="@color/color_505050"
            android:text="男"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_birthday"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="生日"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_birthday"
            android:gravity="center_vertical"
            android:textColor="@color/color_505050"
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="真实姓名"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_name"
            android:gravity="center_vertical"
            android:textColor="@color/color_505050"
            android:text="德玛"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="手机号码"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_phone"
            android:gravity="center_vertical"
            android:textColor="@color/color_505050"
            android:text="1555454544"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_update_phone"
            android:textColor="@color/color_505050"
            android:text="修改"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_location"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="所在地"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_location"
            android:gravity="center_vertical"
            android:textColor="@color/color_505050"
            android:text="上海"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_detail_location"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="详细地址"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_detail_location"
            android:layout_weight="2"
            android:maxLines="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_505050"
            android:text="怒漯河怒漯河怒漯河怒漯河"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_postal"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="邮政编号"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_postal"
            android:gravity="center_vertical"
            android:textColor="@color/color_505050"
            android:text="766767"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/color_1d1d1d"
            android:text="邮箱"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_email"
            android:gravity="center_vertical"
            android:textColor="@color/color_505050"
            android:text="24354354@qq.com"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_gravity="center"
            android:src="@mipmap/icon_youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>