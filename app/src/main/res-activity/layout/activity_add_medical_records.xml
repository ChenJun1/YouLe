<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.activty.ActivityAddMedicalRecords"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiangmu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:background="@null"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/margin_16"
            android:gravity="center_vertical"
            android:hint="标题"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_jieshushijian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:maxLines="1"
            android:layout_weight="1"
            android:textColor="@color/color_585858"
            android:layout_marginLeft="@dimen/margin_16"
            android:gravity="center_vertical"
            android:text="时间"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:maxLines="1"
            android:textColor="@color/color_585858"
            android:layout_marginLeft="@dimen/margin_16"
            android:gravity="center_vertical"
            android:text="2018-10-29"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_mrjiantou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_yiyuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:maxLines="1"
            android:layout_weight="1"
            android:textColor="@color/color_585858"
            android:layout_marginLeft="@dimen/margin_16"
            android:gravity="center_vertical"
            android:text="医院"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:maxLines="1"
            android:textColor="@color/color_585858"
            android:layout_marginLeft="@dimen/margin_16"
            android:gravity="center_vertical"
            android:text="上海交大医院"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_mrjiantou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorWhite"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_969696"
            android:layout_marginTop="@dimen/margin_8"
            android:text="备注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>